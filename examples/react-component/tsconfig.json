{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "example-pkg-react-component": ["./src"],
      "example-pkg-react-component/*": ["./src/*"]
    }
  },
  "include": ["src"],
}
